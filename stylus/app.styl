@require '~normalize.css/normalize.css'

$white = #c2
$purple = #5c19bb

html {
	background #21
	color $white
	font-size 62.5%
}

body {
	display flex
	justify-content center

	font 1.6rem/1.5em 'Source Sans Pro', 'Ubuntu', 'Segoe UI Variable', 'Segoe UI', system-ui, ui-sans-serif, 'Calibri', sans-serif
}

.container {
	padding 2rem 4rem
	margin 4rem 8rem
	background #333
}

input,
label {
	&:not(:last-child) {
		margin-right 1rem
	}
}

input {
	padding 1rem 2rem
	background transparent
	border .2rem solid $white
	color inherit
	transition border-color .3s ease

	&:focus {
		outline none
		border-color $purple
	}

	&::placeholder {
		color #9b
	}
}

h1 {
	margin 0 0 2rem
	line-height 1.5em
}

.result {
	margin-top 4rem
	border-top .2rem solid $purple
}
